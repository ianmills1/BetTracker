@{
    ViewBag.Title = "Home Page";
}

<div class="homecard" style="align-content:center">
    <img src="~/Content/Assets/HomePageLeadImage3.jpg" class="img-fluid" alt="Lebron James dunk" style="width:560px; height: 370px;">
    <h5 class="card-text">The number one place to track all your bets! Click below to start tracking your bets today.</h5>    
</div>
<div class="page">
    <div class="section">
        <div class="card" style="width: 18rem;">
            <img src="~/Content/Assets/SingleGamePic.jpg" class="card-img-top" alt="NBA tipoff">
            <div class="card-body">
                @Html.ActionLink("Game Bets", "Index", "SingleGameBet")
            </div>
        </div>
        <div class="card" style="width: 18rem;">
            <img src="~/Content/Assets/TeamSeasonPic.jpg" class="card-img-top" alt="Colts team">
            <div class="card-body">
                @Html.ActionLink("Team Futures", "Index", "TeamSeasonBet")
            </div>
        </div>
        <div class="card" style="width: 18rem;">
            <img src="~/Content/Assets/PlayerGamePic.jpg" class="card-img-top" alt="Aaron Judge">
            <div class="card-body">
                @Html.ActionLink("Player Props", "Index", "PlayerGameBet")
            </div>
        </div>
    </div>
</div>